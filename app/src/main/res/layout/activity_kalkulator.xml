<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".KalkulatorActivity">

    <!-- Tampilan Hasil -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textSize="36sp"
        android:textColor="#000000"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Grid Layout untuk tombol -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="340dp"
        android:layout_height="433dp"
        android:layout_marginTop="68dp"
        android:columnCount="4"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResult">

        <!-- Daftar Tombol -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="1"
            android:textColor="#000000" /> <!-- Tombol 1 -->

        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="2"
            android:textColor="#000000" /> <!-- Tombol 2 -->

        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="3"
            android:textColor="#000000" /> <!-- Tombol 3 -->

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#d3d3d3"
            android:text="+"
            android:textColor="#000000" /> <!-- Tombol Plus -->

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="4"
            android:textColor="#000000" /> <!-- Tombol 4 -->

        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="5"
            android:textColor="#000000" /> <!-- Tombol 5 -->

        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="6"
            android:textColor="#000000" /> <!-- Tombol 6 -->

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#d3d3d3"
            android:text="-"
            android:textColor="#000000" /> <!-- Tombol Minus -->

        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="7"
            android:textColor="#000000" /> <!-- Tombol 7 -->

        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="8"
            android:textColor="#000000" /> <!-- Tombol 8 -->

        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="9"
            android:textColor="#000000" /> <!-- Tombol 9 -->

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#d3d3d3"
            android:text="×"
            android:textColor="#000000" /> <!-- Tombol Multiply -->

        <Button
            android:id="@+id/btnClear"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#565656"
            android:text="C"
            android:textColor="#000000" /> <!-- Tombol Clear -->

        <Button
            android:id="@+id/btn0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:text="0"
            android:textColor="#000000" /> <!-- Tombol 0 -->

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#565656"
            android:text="="
            android:textColor="#000000" /> <!-- Tombol Equals -->

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#d3d3d3"
            android:text="÷"
            android:textColor="#000000" /> <!-- Tombol Divide -->

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#d3d3d3"
            android:text="⌫"
            android:textColor="#000000" /> <!-- Tombol Delete -->


    </GridLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali ke Dashboard"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
